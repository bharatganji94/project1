<html>
<head>
    
<link href="../table.css" rel="stylesheet" type="text/css" >    
</head>    
<body>

<h1> Listing Articles</h1>
<a href='/articles/new'>New Article</a> <br>

<table>
    <tr>
        <th> Title</th>
        <th> Text</th>
        <th> Id </th>
        
    </tr>
    
    <% @article.each do |a| %>
    <tr>
        <td> <%=a.title %></td>
        <td> <%=a.text %> </td>
        <td> <%=a.id %>   </td>
        <td> <%= link_to 'Show', article_path(a) %> </td>
        <td> <%= link_to 'Edit', edit_article_path(a) %> </td> 
        <td> <%= link_to 'Delete', article_path(a) ,method: :DELETE,data: { Confirm: 'Are you sure?' } %> </td>
    </tr>
    <% end %>
    





</table>
<%= link_to 'ListofArticles' , controller: 'articles' %> <br>
</body>

</html>

